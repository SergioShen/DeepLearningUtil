{
  "optimizer": "AdamW",
  "optimizer_args": {
    "lr": 1e-4,
    "weight_decay": 1e-4
  },
  "lr_scheduler": "ReduceLROnPlateau",
  "lr_scheduler_args": {
    "factor": 0.1,
    "threshold": 0.0001,
    "threshold_mode": "rel",
    "patience": 4
  },
  "loss_function": "CrossEntropyLoss",
  "loss_function_args": {
    "ignore_index": 1
  },
  "output_dir": "./result/example",
  "batch_size": 64,
  "n_epochs": 30,
  "start_epoch": 1,
  "grad_clip": 0.5,
  "print_step": 100,
  "dataset": {
    "train": "./dataset/train.json",
    "valid": "./dataset/valid.json",
    "test": "./dataset/test.json",
    "src_vocab_path": "./dataset/src_vocab.pkl",
    "tgt_vocab_path": "./dataset/tgt_vocab.pkl",
    "share_vocab": false,
    "reserved_tokens": [
      "<unk>",
      "<pad>",
      "<sos>",
      "<eos>"
    ]
  }
}
